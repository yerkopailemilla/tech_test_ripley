<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="152dp"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/spacing_middle"
        app:contentPadding="5dp"
        app:cardCornerRadius="@dimen/spacing_medium"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/item_list_catalog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/item_list_catalog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_middle"
        android:fontFamily="@font/barlow_medium"
        android:textSize="@dimen/font_size_18"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/item_list_catalog_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:fontFamily="@font/barlow_medium"
        android:textSize="@dimen/font_size_14"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/lyt_card_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/spacing_mslarge"
            android:layout_height="@dimen/spacing_large"
            android:layout_gravity="center"
            android:src="@mipmap/ic_ripley_card"/>
        
        <View
            android:layout_width="@dimen/spacing_small"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/item_list_catalog_card_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_medium"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/colorRed"/>

    </LinearLayout>

</LinearLayout>